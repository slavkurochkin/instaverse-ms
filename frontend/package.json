{
  "name": "client",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "start:local": "NODE_ENV=local react-scripts start",
    "build": "react-scripts build && npm run sentry:sourcemaps || true",
    "test": "jest",
    "test:unit": "jest __tests__/unit",
    "test:contract": "jest --testPathPattern=pact.test.js",
    "test:coverage": "npm test -- --coverage",
    "publish:pact": "pact-broker publish ./pacts --consumer-app-version=1.0.13 --tag=main --broker-base-url=$PACT_BROKER_BASE_URL --broker-token=$PACT_BROKER_TOKEN",
    "lint": "eslint src",
    "format": "prettier --write \"src/**/*.{js,jsx,json,css,md}\"",
    "eject": "react-scripts eject",
    "sentry:sourcemaps": "sentry-cli sourcemaps inject --org instaverse --project javascript-react ./build && sentry-cli sourcemaps upload --org instaverse --project javascript-react ./build || echo 'Sentry upload skipped'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "dependencies": {
    "@ant-design/icons": "^5.2.6",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11",
    "@reduxjs/toolkit": "^2.0.1",
    "@sentry/cli": "^2.41.1",
    "@sentry/react": "^8.51.0",
    "antd": "^5.20.6",
    "axios": "^1.8.4",
    "chart.js": "^4.4.6",
    "jwt-decode": "4.0.0",
    "moment": "2.30.1",
    "node-polyfill-webpack-plugin": "^4.0.0",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.2.0",
    "react-dom": "^18.3.1",
    "react-file-base64": "1.0.3",
    "react-highlight-words": "^0.20.0",
    "react-icons": "^5.4.0",
    "react-redux": "^9.1.0",
    "react-router-dom": "^6.15.0",
    "react-scripts": "^5.0.1",
    "redux": "^5.0.1",
    "redux-thunk": "^3.1.0",
    "web-vitals": "^4.0.1",
    "webpack": "^5.74.0"
  },
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.26.3",
    "@pact-foundation/pact": "^13.2.0",
    "@pact-foundation/pact-web": "^9.18.1",
    "@playwright/test": "^1.50.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^20.8.4",
    "@types/react": "^18.3.3",
    "babel-jest": "^29.7.0",
    "dotenv": "^16.4.5",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^27.5.1",
    "playwright": "^1.50.1",
    "redux-mock-store": "^1.5.5",
    "typescript": "^4.9.5"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
